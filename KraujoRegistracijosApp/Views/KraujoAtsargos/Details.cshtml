@model KraujoRegistracijosApp.Models.KraujoAtsargos

@{
    ViewData["Title"] = "Details";
}

<h1>Detali informacija</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Kraujo grupė:
            @*@Html.DisplayNameFor(model => model.KraujoGrupe)*@
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.KraujoGrupe)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Atsargos):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Atsargos) l
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Keisti</a> |
    <a asp-action="Index">Grįžti į sąrašą</a>
</div>

<br>
<p><h4>Įveskite įveskite reikiamą kraujo kiekį rezervacijai:</h4></p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RezervuotiKraujoAtsargas">
            <div class="form-group">
                <label for="Kiekis" class="control-label"></label>
                <input name="Atsargos" class="form-control" />
                <label for="Kraujo grupė" class="control-label"></label>
                <input name="KraujoGrupe" class="form-control" value="@Html.DisplayFor(model => model.KraujoGrupe)" readonly/>

            </div>
            <div class="form-group">
                <input type="submit" value="Paieška" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>