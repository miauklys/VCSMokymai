@model KraujoRegistracijosApp.Models.KraujoAtsargos

@{
    ViewData["Title"] = "Create";
}

<h1></h1>

<h4>Pridėti naujas kraujo atsargas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">                
                <label asp-for="KraujoGrupe" class="control-label"></label>
                <input asp-for="KraujoGrupe" class="form-control" />
                <span asp-validation-for="KraujoGrupe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Atsargos" class="control-label"></label>
                <input asp-for="Atsargos" class="form-control" />
                <span asp-validation-for="Atsargos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sukurti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Grįžti į sąrašą</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
