@model List<KraujoRegistracijosApp.Models.KraujoAtsargos>

@{
    ViewData["Title"] = "Edit";
}

<h1>Šiame puslapyje galite keisti kraujo atsargų kiekį</h1>

<hr />
<form asp-action="Edit">
    @for (var i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model[i].Id" />
                <div class="form-group">
                    <label asp-for="@Model[i].KraujoGrupe" class="control-label"> </label>
                    <input asp-for="@Model[i].KraujoGrupe" class="form-control" />
                    <span asp-validation-for="@Model[i].KraujoGrupe" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model[i].Atsargos" class="control-label"></label>
                    <input asp-for="@Model[i].Atsargos" class="form-control" />
                    <span asp-validation-for="@Model[i].Atsargos" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
    }
    <div class="form-group">
        <input type="submit" value="Išsaugoti" class="btn btn-primary" />
    </div>
</form>


    <div>
        <a asp-action="Index">Grįžti į sąrašą</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
